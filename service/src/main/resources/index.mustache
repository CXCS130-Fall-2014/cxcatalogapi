         if (productCost != '') {
            update_url += "&productCost=" + productCost;
         }

         $("#update_service_call a").attr('href', update_url).text(update_url).parent().show();
         $.ajax({
             url: update_url,
             type: "POST",
             success:function(r) {
                 $("#update_results").html("<pre>" + JSON.stringify(r,null, 4) + "</pre>");
             }
