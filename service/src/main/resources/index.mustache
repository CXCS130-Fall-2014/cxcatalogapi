<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Shopping Cart Service</title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="http://desandro.github.io/masonry/css/style.css">
    <link rel="shortcut icon" href="http://img01.shopzilla-images.com/s2static/us/sz/1b0e6c52/sz2/common/images/shopzilla.ico" />
</head>
<body>
<div class="content">
          <h1>Shopping Cart Service</h1>

    <div id="filters" class="button-group">
      <button data-filter="*">show all</button>
      <button data-filter=".price1">price1</button>
      <button data-filter=".price2">price2</button>
      <button data-filter=".price3">price3</button>
      <button data-filter=":not(.transition)">not transition</button>
      <button data-filter=".metal:not(.transition)">metal but not transition</button>
    </div>
    <div id="container" class="transitions-enabled infinite-scroll clearfix masonry">
        <div class="item">
        </div>
    </div> <!-- container -->

    <div class="loader-wrapper">
        <div class="loader">
            <p>loading...</p>
            <img alt="loading" src="http://i.imgur.com/qkKy8.gif">
        </div>
    </div>

<script type="text/javascript" src="/assets/jquery-1.9.1.min.js"></script>
<script src="/assets/jquery.imagesloaded.min.js"></script>
<script src="/assets/jquery.infinitescroll.min.js"></script>
<script src="/assets/jquery.isotope.min.js"></script>

<script>
  $(function(){

    var load = 0;
    var reachEnd = 0;
    $('.loader').hide();
    $(window).scroll(function(){
            if($(window).scrollTop() == $(document).height() - $(window).height()) 
            {
                if (reachEnd == 1) {
                    //$('.loader img').hide();
                    //$('.loader p').text("No more items to load");
                    $('.loader').show().delay(1000).fadeOut();
                }
                else {
                    $('.loader').show();
                    //var appendUrl = "/services/shoppingcart/v1/shoppingcart/append";
                    var appendUrl = "/services/shoppingcart/v1/shoppingcart/apicall/shopperId/1";
                    var appendData = {};
                    appendData['load'] = load;
                    appendData['format'] = 'json';

                    $.ajax({
                        type: "GET",
                        data : appendData,
                        url: appendUrl,
                        contentType: 'application/json',
                        dataType: 'json',
                        success:function(data) {
                            var imgs = [];
                            var descriptions = [];
                            var redirect_url = [];
                            var i = 0;
                            $.each(data, function() {
                                $.each(this, function(k, v) {
                                    if (k == 'image_url') {
                                        imgs[i] = v[3];
                                    } else if (k == 'description') {
                                        descriptions[i] = v;
                                    } else if (k == 'redirect_url') {
                                        redirect_url[i] = v;
                                    }
                                });
                                i++;
                            });
                            var newDivs = '';
                            console.log(imgs);
                            console.log(descriptions);
                            if (jQuery.isEmptyObject(imgs)) {
                                reachEnd = 1;
                                $('.loader img').hide();
                                $('.loader p').text("No more items to load");
                                $('.loader').show().delay(1000).fadeOut();
                            } else {
                                $('.loader').hide();
                                for (var i = 0; i < imgs.length; i++) {
                                    var price = "price" + Math.floor(Math.random()*4);
                                    newDivs = newDivs + 
                                    "<div class='item " + price +  "'><a href=" + redirect_url [i] + "><img class=image src=" + imgs[i] + "/></a><div class=description>" + descriptions[i] +"</div></div>";
                                };
                                newItems = $(newDivs).appendTo('#container');
                                $('#container').imagesLoaded( function(){
                                    $("#container").isotope('appended', newItems );
                                });
                            }
                        },
                        error: function(xhr, status, error) {
                          console.log(error);
                          console.log(status);
                        }
                    });
                    load++;
                }
            }
    });
    
    
    var $container = $('#container').imagesLoaded( function() {
        $container.isotope({
            itemSelector : '.item'
        });
        // filter items on button click
        $('#filters').on( 'click', 'button', function() {
            var filterValue = $(this).attr('data-filter');
            $container.isotope({ filter: filterValue });
        });
    });
});
</script>

